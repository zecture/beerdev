{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "skipLibCheck": true,
      "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
}